# Use OpenJDK as the base image
FROM eclipse-temurin:17-jre-alpine

WORKDIR /work/

# Copy the Quarkus Lambda runner and dependencies
COPY target/quarkus-lambda-1.0-SNAPSHOT-runner.jar /work/

# Expose the default Lambda port (8080 is common, adjust if needed)
EXPOSE 8080

# Run the Lambda application
CMD ["java", "-jar", "quarkus-lambda-1.0-SNAPSHOT-runner.jar"]
